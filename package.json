{
  "name": "izanami-engine",
  "version": "0.0.1",
  "description": "Game Engine in JS",
  "main": "main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron . & WEBPACK_ENV=development webpack -w",
    "build-mac": "electron-builder --mac --x64",
    "build-win": "electron-builder --win --x64",
    "build-web": "WEBPACK_ENV=production webpack",
    "watch": "WEBPACK_ENV=development webpack -w"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sosuke-m-1/izanami-engine.git"
  },
  "keywords": [
    "game"
  ],
  "author": "UK8",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sosuke-m-1/izanami-engine/issues"
  },
  "homepage": "https://github.com/sosuke-m-1/izanami-engine#readme",
  "devDependencies": {
    "electron": "^16.0.5",
    "electron-builder": "^22.14.5",
    "electron-reload": "^2.0.0-alpha.1",
    "ts-loader": "^9.2.6",
    "typescript": "^4.5.4",
    "webpack": "^5.65.0",
    "webpack-cli": "^4.9.1"
  },
  "dependencies": {
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "build": {
    "appId": "izanami.test",
    "files": [
      "package.json",
      "package-lock.json",
      "index.js",
      "index.html"
    ],
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "directories": {
      "output": "build"
    }
  }
}
